# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8

indent_style = space
indent_size = 2

quote_type = single

curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = false
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 80
